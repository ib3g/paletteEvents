            <div class="row">
                <div class="col-xl-12">
                    <div class="section_title text-center mb-65">
                        <h3 class="title-style mb-5 mt-5 text-capitalize text-center"><span>Galerie</span>
                        </h3>
                    </div>
                </div>
            </div>

