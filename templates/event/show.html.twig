    <section class="pricing-w3l" id="{% if ((app.user and not eventVisited) or( not app.user) ) and (event.comments is  empty) %}avis-comment-white{% else %}avis-comment{% endif %}">
        <div class="container py-lg-5 py-md-4 py-2" >
{#            compare  dateevent with today #}

